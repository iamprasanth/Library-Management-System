
<%= link_to 'Home',controller:'home'%>
<%= link_to 'Add new book', new_book_path %>
<h1>Listing Books</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    

  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>

             <td><%= link_to 'Edit', edit_book_path(book) %></td>
             <td><%= link_to 'Delete', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'More Details', book_path(book) %></td>
    </tr>
  <% end %>
</table>